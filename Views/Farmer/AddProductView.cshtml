@model Agri_Energy_Connect_Platform.Models.Products

@{
    ViewData["Title"] = "Add Product";
}

<h1>@ViewData["Title"]</h1>

<h4>Add a new Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="FarmerController" asp-action="AddProduct">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label"></label>
                <input asp-for="ProductionDate" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="mb-3"></div>
            <div class="form-group">
                <input type="submit" value="Add Product" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
    
</div>
