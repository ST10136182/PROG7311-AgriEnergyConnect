@{
    ViewData["Title"] = "Employee Hub";
}

<h2>Employee Hub</h2>
<p>Please select what you would like to do:</p>

<!-- Buttons to navigate to the AddFarmer and ViewProducts views -->
<div>
    <form asp-controller="Employee" asp-action="AddFarmer" style="display: inline-block; margin-right: 10px;">
        <input type="submit" value="Add a Farmer" class="btn btn-primary" />
    </form>

    <form asp-controller="Employee" asp-action="ViewProducts" style="display: inline-block;">
        <input type="submit" value="View Farmer Products" class="btn btn-primary" />
    </form>
</div>